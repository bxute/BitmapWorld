<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextEffectActivity">


    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/movingView1"
        android:background="#03A9F4"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
    <View
        app:layout_constraintTop_toBottomOf="@+id/movingView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/movingView2"
        android:background="#9C27B0"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
    <View
        app:layout_constraintTop_toBottomOf="@+id/movingView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/movingView3"
        android:background="#FFC107"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button"
        android:layout_width="200dp"
        android:src="@drawable/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="200dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>