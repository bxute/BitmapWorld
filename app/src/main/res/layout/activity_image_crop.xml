<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ImageCropActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/original_image_label"
        android:layout_width="0dp"
        android:textColor="#313131"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Original Image"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/original_image_iv"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/original_image_label"
        android:layout_marginLeft="24dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="24dp"
        android:src="@drawable/image"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/modified_image_label"
        android:layout_width="0dp"
        android:textColor="#313131"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_margin="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/original_image_iv"
        android:text="Cropped Image"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/modified_image_iv_1"
        android:layout_width="0dp"
        android:layout_marginLeft="24dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="24dp"
        android:alpha="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/modified_image_iv"
        app:layout_constraintBottom_toBottomOf="@+id/modified_image_iv"
        android:src="@drawable/rec"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/modified_image_iv"
        android:layout_width="0dp"
        android:layout_marginLeft="24dp"
        android:adjustViewBounds="true"
        android:alpha="1"
        android:layout_marginRight="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modified_image_label"
        android:src="@drawable/image"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>